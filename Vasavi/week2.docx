Added email validation using JS

function validate()
{
	var mailformat = /^w+([.-]?w+)*@w+([.-]?w+)*(.w{2,3})+$/;
	if(($('#email').val()).match(mailformat))
	{
		document.form1.text1.focus();
		return true;
	}
	else
	{
		alert("You have entered an invalid email address!");
		document.form1.text1.focus();
		return false;
	}
}